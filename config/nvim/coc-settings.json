{
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.extensionUpdateCheck": "never",
  "suggest.enablePreselect": false,
  "python.linting.flake8Enabled": true,
  "python.linting.banditEnabled": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "clangd": {
      "command": "clangd",
      "args": [
        "--background-index"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ]
    }
  }
}
