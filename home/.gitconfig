[alias]
    # stage deleted files
    stagedelete = "!git ls-files --deleted -z | xargs -0 git rm"
    undolastcommit = reset HEAD~
    deleteuselessbranches = "!f() { git branch | grep -v 'master' | grep -v '^*' | xargs git branch -d; }; f;"
    l = log --graph --decorate

[core]
    editor = vim

[merge]
    tool = vimdiff
    conflictstyle = diff3
